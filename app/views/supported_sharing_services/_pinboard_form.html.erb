<div class="service-options-wrap">
    <div class="service-options">
        <div class="clearfix">
            <div class="half">
                <%= form_for(record) do |f| %>
                    <%= f.hidden_field :service_id, value: sharing_service[:service_id] %>
                    <%= f.hidden_field :operation, value: 'authorize' %>
                    <%= password_field_tag 'password', '', placeholder: 'API Token', class: 'no-margin' %>

                    <%= submit_tag "Save", class: 'button button-primary' %>
                    <%= button_tag 'Cancel', class: 'button button-cancel button-inline', data: {behavior: "hide_service_options"} %>
                <% end %>
            </div>
            <div class="half">
                <small class="share-help">You can find your API token on your <a href="https://pinboard.in/settings/password" target="_blank">Pinboard Password page</a>.</small>
            </div>
        </div>
    </div>
</div>