<li class="icon-share-custom share-icon-wrap">
    <div class="service-header">
        <p class="service-title"><%= sharing_service.label %></p>
    </div>
    <%= link_to 'Deactivate', sharing_service_path(sharing_service), class: 'button button-cancel list-action show-service-options', method: :delete, data: { confirm: 'Are you sure you want to delete this sharing service?' } %>
    
    <div class="service-options-wrap">
        <div class="service-options">
            <%= form_for(sharing_service) do |f| %>
            <%= f.text_field :label, placeholder: 'Label', class: 'no-margin' %>
            <%= f.url_field :url, placeholder: 'URL' %>
            <%= submit_tag "Save", class: 'button button-primary' %>
            <%= button_tag 'Cancel', class: 'button button-cancel button-inline', data: {behavior: "hide_service_options"} %>
            <% end %>
        </div>
    </div>
</li>

